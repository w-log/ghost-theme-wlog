{{!< default}}

{{#post}}
<article class="wl-article {{post_class}}">
    {{#match @page.show_title_and_feature_image}}
    <header class="wl-header wl-canvas">
        <h1 class="wl-title">{{title}}</h1>
        {{#if custom_excerpt}}
            <p class="wl-excerpt">{{custom_excerpt}}</p>
        {{/if}}
        {{#if feature_image}}
            <figure class="wl-feature-image">
                <img src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                {{#if feature_image_caption}}
                    <figcaption>{{feature_image_caption}}</figcaption>
                {{/if}}
            </figure>
        {{/if}}
    </header>
    {{/match}}
    <div class="wl-content wl-canvas">
        {{content}}
    </div>
</article>
{{/post}}
